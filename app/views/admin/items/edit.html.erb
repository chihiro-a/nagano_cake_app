商品編集画面


<%= form_with model: @item, url:admin_item_path(@item.id), local:true do |f| %>
<!--送信先URLの指定がうまくいかない…-->
  <h4>商品画像</h4>
  <%= f.attachment_field :image %>
  <h4>商品名</h4>
  <%= f.text_field :name %>
  <h4>商品説明</h4>
  <%= f.text_area :introduction %>
  <h4>ジャンル</h4>
  <%= f.select :genre_id, [['ケーキ',1], ['プリン',2],], {include_blank: '--選択してください--'}, class: 'sample' %>
  <h4>税抜価格</h4>
  <%= f.text_field :price %>
  <h4>販売ステータス</h4>


  <%= f.label :status, '販売中', value: true %>
  <%= f.radio_button :is_active, 'true' %>
  <%= f.label :status, '販売停止中', value: false %>
  <%= f.radio_button :is_active, 'false' %>


  <%= f.submit '変更を保存'  %>
<% end %>