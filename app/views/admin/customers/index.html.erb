会員一覧
<table>
  <tr>
    <th>会員ID</th>
    <th>氏名</th>
    <th>メールアドレス</th>
    <th>ステータス</th>
  </tr>
  <tr>
    <% @customers.each do |customer| %>
    <td><%= customer.id %></td>
    <td><%= link_to "#{customer.last_name}#{customer.first_name}",admin_customer_path(customer.id) %></td>
    <td><%= customer.email %></td>
    <td><%= if customer.is_active == true
            "有効"
            else
            "退会"
            end %></td>
    <% end %>
  </tr>
</table>
<%= paginate @customers %>

