<p class="pl-5 pt-3"><span style="background-color:	#e8e8e8">　注文履歴詳細　</span></p>
<table>
  <tr>
    <th>購入者<td><%= @order.customer.last_name %><%= @order.customer.first_name %></td></th>
  </tr>
  <tr>
    <th>注文日<td><%= @order.created_at.strftime("%Y/%m/%e") %></td></th>
  </tr>
  <tr>
    <th>配送先<td>〒<%= @order.postal_code %>　<%= @order.address %></br>
    <%= @order.name %></td></th>
  </tr>
  <tr>
    <th>支払方法<td><%= @order.payment_method %></td></th>
  </tr>
  <tr>
    <th>注文ステータス<td>
      <%= form_with model: @order, url:admin_order_edit_path,local:true do |f| %>
      <%= f.select :status, Order.statuses.keys %>
      <%= f.submit "更新", class:"btn btn-success" %>
      <% end %></td></th>
  </tr>
</table>



<div class="container">
  <div class="row">
    <div class="col-7">
      <table>
        <tr bgcolor="#e8e8e8">
          <th>商品名</th>
          <th>単価（税込）</th>
          <th>数量</th>
          <th>小計</th>
          <th>制作ステータス</th>
        </tr>
        <% @order.order_details.each do |order_detail| %>
        <tr>
          <td><%= order_detail.item.name %></td>
          <td><%= order_detail.price %></td>
          <td><%= order_detail.amount %></td>
          <td><%= ((order_detail.price * order_detail.amount).round).to_s(:delimited) %></td>
          <td><%= form_with model: order_detail, url:admin_order_detail_edit_path(order_detail.id),local:true,method: :patch do |f| %>
              <%= f.select :making_status, OrderDetail.making_statuses.keys %>
              <%= f.submit "更新", class:"btn btn-success" %>
              <% end %></td>
        </tr>
        <% end %>
      </table>
    </div>
    <div class="col-5">
      <table>
        <tr>
          <th>商品合計<td class="text-right"><%= (@order.total_payment - 800).to_s(:delimited) %>円</td></th>
        </tr>
        <tr>
          <th>送料<td class="text-right"><%= @order.shipping_cost%>円</td></th>
        </tr>
        <tr>
          <th>請求金額合計<td class="text-right"><%= @order.total_payment.to_s(:delimited) %>円</td></th>
        </tr>
      </table>
    </div>
  </div>
</div>
