
<p><span style="background-color:	#e8e8e8">　<%= @customer.last_name %><%= @customer.first_name %>さんの注文履歴一覧　</span></p>
<table border="1" style="border-collapse: collapse">
  <tr bgcolor="#e8e8e8">
    <th>注文日</th>
    <th>配送先</th>
    <th>注文商品</th>
    <th>支払金額</th>
    <th>ステータス</th>
    <th>注文詳細</th>
  </tr>
  <% @orders.each do |order| %>
  <tr>
    <td><%= order.created_at.strftime("%Y/%m/%e") %></td>
    <td><%= order.postal_code %></br>
        <%= order.address %></br>
        <%= order.name %></td>
    <td>
       <% order.order_details.each do |order_detail| %>
          <%= order_detail.item.name %></br>
       <% end %>
    </td>
    <td>１５００</td>
    <td><%= order.status %></td>
    <td><p class="m-1"><%= link_to "詳細" ,admin_order_path(order.id) ,class:"btn btn-primary" %></p></td>
  </tr>
  <% end %>

  </div>
