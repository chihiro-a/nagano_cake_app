
<p><span style="background-color:	#e8e8e8">　<%= "#{@customer.last_name}#{@customer.first_name}" %>さんの会員詳細　</span></p>
<table>
  <tr>
    <td>会員ID</td>
    <td><%= @customer.id %></td>
  </tr>
  <tr>
    <td>氏名</td>
    <td><%= "#{@customer.last_name} #{@customer.first_name}"%></td>
  </tr>
  <tr>
    <td>カナ</td>
    <td><%= "#{@customer.last_name_kana} #{@customer.first_name_kana}"%></td>
  </tr>
  <tr>
    <td>郵便番号</td>
    <td><%= @customer.postal_code %></td>
  </tr>
  <tr>
    <td>住所</td>
    <td><%= @customer.address %></td>
  </tr>
  <tr>
    <td>電話番号</td>
    <td><%= @customer.telephone_number %></td>
  </tr>
    <tr>
      <td>メールアドレス</td>
      <td><%= @customer.email %></td>
    </tr>
    <tr>
    <td>会員ステータス</td>
    <td>
      <% if @customer.is_active == true %>
      <p class="text-success">有効</p>
      <% else %>
      <p class="text-secondary">退会</p>
      <% end %>
    </td>
  </tr>
</table>

<span class="pr-5 pl-4"><%= link_to "編集する" ,edit_admin_customer_path,class:"btn btn-success" %></span>
<span><%= link_to "注文履歴一覧を見る" , "#{@customer.id}/orders" ,class:"btn btn-primary" %></span>
