
<span class="bg-secondary inline-block m-5">　新規会員登録　</span>


<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "customers/shared/error_messages", resource: resource %>

  <div class="field">
    <h5>名前</h5>
    <%= f.label :last_name, "(姓)" %>
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
    <%= f.label :first_name, "(名)" %>
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
  </div>

  <div class="field">
    <h5>フリガナ</h5>
    <%= f.label :last_name_kana, "(セイ)" %>
    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
    <%= f.label :first_name_kana, "(メイ)" %>
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
  </div>

  <div class="field">
    <%= f.label :email, "メールアドレス" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :postal_code, "郵便番号（ハイフンなし）" %>
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
  </div>

  <div class="field">
    <%= f.label :address, "住所" %>
    <%= f.text_field :address, autofocus: true, autocomplete: "adress" %>
  </div>

  <div class="field">
    <%= f.label :telephone_number, "電話番号（ハイフンなし）" %>
    <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード（６文字以上）" %>
    <% if @minimum_password_length %>
    <em><% @minimum_password_length %></em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "パスワード（確認用）" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規会員登録" ,class:"btn btn-success" %>
  </div>
<% end %>

<span class="bg-secondary inline-block ml-5">　既に登録済みの方　</span>
<div class="ml-5 mt-2">
  <%= link_to "こちら" ,  new_customer_session_path %>　からログインしてください。
</div>


