<h3>配送先登録／一覧</h3>
<%= form_with model: @address, url:address_new_path,local:true do |f| %>
<table>
  <tr><th>郵便番号（ハイフンなし）</th><td><%= f.text_field :postal_code %></td></tr>
  <tr><th>住所</th><td><%= f.text_area :address %></td></tr>
  <tr><th>宛名</th><td><%= f.text_field :name %></td></tr>
</table>
<%= f.submit"新規登録" ,class:"btn btn-success" %>
<% end %>

<table>
  <tr>
    <th>郵便番号</th>
    <th>住所</th>
    <th>宛名</th>
    <th></th>
  </tr>
  <% @addresses.each do |address|%>
  <tr>
    <th><%= address.postal_code %></th>
    <th><%= address.address %></th>
    <th><%= address.name %></th>
    <th><%= link_to "編集する" ,"/address/#{address.id}/edit" ,class:"btn btn-success" %>
        <%= link_to "削除する" ,"/address/#{address.id}" ,method: :delete , class:"btn btn-danger"%></th>
  </tr>
  <% end %>
</table>