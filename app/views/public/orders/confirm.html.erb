<p class="pl-5"><span style="background-color:	#e8e8e8">　注文情報確認　</span></p>
<div class="container">
  <div class="row">
    <div class="col-7">
      <table border="1" style="border-collapse: collapse">
        <tr bgcolor="#e8e8e8">
          <th>商品名</th>
          <th>単価（税込）</th>
          <th>数量</th>
          <th>小計</th>
        </tr>
        <% @customer.cart_items.each do |cart_item| %>
        <tr>
          <td><%= attachment_image_tag cart_item.item,:image, :fill, 100, 100, format: 'jpeg' %><%= cart_item.item.name %></td>
          <td><%= ((cart_item.item.price * 1.1).round).to_s(:delimited) %></td>
          <td><%= cart_item.amount %></td>
          <td><%= ((cart_item.item.price * 1.1 * cart_item.amount).round).to_s(:delimited) %></td>
        <% end %>
        </tr>
      </table>
    </div>
    <div class="col-5">
      <table border="1" style="border-collapse: collapse">
        <tr><th bgcolor="#e8e8e8">送料</th><td>800</td></tr>
        <tr><th bgcolor="#e8e8e8">商品合計</th><td><%= @price.to_s(:delimited) %></td></tr>
        <tr><th bgcolor="#e8e8e8">請求金額</th><td><%= @total_payment.to_s(:delimited) %></td></tr>
      </table>
    </div>
  </div>
</div>

<table>
  <tr>
    <th>支払方法<td>　<%= @order.payment_method_i18n %></td></th>
  </tr>
  <tr>
    <th>お届け先<td>　〒<%=@order.postal_code %><%= @order.address %></br>
    　<%= @order.name %>
    </td></th>
  </tr>
</table>

<div class="text-center pt-5">
  <%= form_with model: @order, url:orders_path,local:true do |f| %>
  <%= f.hidden_field :postal_code, value: @order.postal_code %>
  <%= f.hidden_field :address, value: @order.address %>
  <%= f.hidden_field :name, value: @order.name %>
  <%= f.submit"注文を確定する" ,class:"btn btn-success"%>
  <% end %>
</div>




