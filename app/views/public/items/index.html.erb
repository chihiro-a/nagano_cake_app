
<div class="container">
  <div class="pt-3">
     <span class="h3">商品一覧</span><span class="h5">（全<%= "#{@count.count}"%>件）</span>
  </div>
</div>

<div class="container">
  <div class="row">
    <% @items.each do |item| %>
    <div class="col-3 pt-2 pb-2">
      <%= link_to "/items/#{item.id}" , method: :get do %>
      <%= attachment_image_tag item, :image, :fill, 150, 150, format: 'jpeg' %>
      <% end %>
      <div><%= item.name %></div>
      <div>¥<%= item.price.to_s(:delimited) %></div>
    </div>
   <% end %>
  </div>
</div>

<div class="p-3">
  <%= paginate @items %>
</div>
