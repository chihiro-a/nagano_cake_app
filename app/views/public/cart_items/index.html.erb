カート内商品一覧
<h3>ショッピングカート</h3>
<p><%= link_to "カートを空にする" , "/cart_items" ,method: :delete %></p>
<table>
  <tr>
    <th>商品名</th>
    <th>単価（税込）</th>
    <th>数量</th>
    <th>小計</th>
    <th></th>
  </tr>

  <% @cart_items.each do |cart_item| %>
   <tr>
    <div>
      <td><%= attachment_image_tag cart_item.item,:image, :fill, 100, 100, format: 'jpeg' %><%= cart_item.item.name %></tb>
    </div>
    <div>
      <td><%= cart_item.item.price + cart_item.item.price * 0.1 %></td>
    </div>
    <div>
      <td>
      <%= form_with model: cart_item, url:"/cart_item/#{cart_item.id}",local:true do |f| %>
      <%= f.select :amount, [['1',1], ['2',2],], class: 'sample' %>
      <%= f.hidden_field :item_id, value: cart_item.item_id %>
      <%= f.submit"変更" %>
      <% end %>
      </td>
    </div>

    <div>
      <td><%= cart_item.item.price * cart_item.amount %></td>
    </div>
    <div>
      <td><%= link_to "削除する" , "/cart_item/#{cart_item.id}",class:"btn btn-success" %></td>
    </div>
  </tr>
  <% end %>
</table>

<div><%= link_to "買い物を続ける" , public_items_path , class:"btn btn-success" %></div>

